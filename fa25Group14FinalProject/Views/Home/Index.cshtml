@* NOTE: Ensure you have the necessary using statement for Authorization if you didn't add it in _ViewImports.cshtml *@
@using Microsoft.AspNetCore.Identity
@using fa25Group14FinalProject.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Our Book Store!</h1>

    <a asp-controller="Products" asp-action="Index" class="btn btn-success">View Our Products</a>

    @if (SignInManager.IsSignedIn(User))
    {
        @* Orders button is available to all authenticated users (Admins and Customers) *@
        <a asp-controller="Orders" asp-action="Index" class="btn btn-info">View Orders</a>

        @if (User.IsInRole("Admin"))
        {
            @* Suppliers and Manage Users buttons are only available to Admins *@
            <a asp-controller="Suppliers" asp-action="Index" class="btn btn-danger">View Suppliers</a>
            <a asp-controller="RoleAdmin" asp-action="Index" class="btn btn-warning">Manage Users</a>
        }
    }
</div>