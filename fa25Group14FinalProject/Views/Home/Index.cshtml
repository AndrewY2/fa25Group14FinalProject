@* NOTE: Ensure you have the necessary using statement for Authorization if you didn't add it in _ViewImports.cshtml *@
@using Microsoft.AspNetCore.Identity
@using fa25Group14FinalProject.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Home Page";

    // 1. Initialize userName to an empty string
    string userName = "";

    // 2. Check if the user is signed in
    if (SignInManager.IsSignedIn(User))
    {
        // 3. Get the AppUser object asynchronously
        AppUser user = await UserManager.GetUserAsync(User);

        // 4. Set the userName to the user's FirstName property
        if (user != null)
        {
            userName = user.FirstName;
        }
    }
}

<div class="text-center">
    <h1 class="display-4">Welcome to Our Book Store @userName!</h1>

    @* The rest of your existing content... *@

    <div class="mt-3">
        <a asp-controller="Seed" asp-action="Index" class="btn btn-outline-secondary m-1">Seed Home Page</a>
        <a asp-controller="Account" asp-action="Index" class="btn btn-warning m-1">View Users / Roles</a>
        <a asp-controller="Genres" asp-action="Index" class="btn btn-secondary m-1">View Genres</a>
        <a asp-controller="Books" asp-action="Search" class="btn btn-success m-1">View Books</a>
    </div>

    @if (SignInManager.IsSignedIn(User))
    {
        @* Orders button is available to all authenticated users (Admins and Customers) *@
        <a asp-controller="Orders" asp-action="Index" class="btn btn-info">View Orders</a>

        @if (User.IsInRole("Admin"))
        {
            @* Suppliers and Manage Users buttons are only available to Admins *@
            <a asp-controller="Suppliers" asp-action="Index" class="btn btn-danger">View Suppliers</a>
            <a asp-controller="RoleAdmin" asp-action="Index" class="btn btn-warning">Manage Users</a>
        }
    }
</div>