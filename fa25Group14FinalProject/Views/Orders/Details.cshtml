@model Yun_Andrew_HW5.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Order Details for Order #@Html.DisplayFor(model => model.OrderNumber)</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Order Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.OrderNumber)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.OrderNumber)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
            <dt class="col-sm-4">
                Customer Name
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.OrderNotes)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.OrderNotes)
            </dd>
        </dl>
    </div>

    <div class="col-md-6">
        <h4>Order Summary</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4 text-right">
                @Html.DisplayNameFor(model => model.Subtotal):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Subtotal) @* i. Order Subtotal *@
            </dd>
            <dt class="col-sm-4 text-right">
                @Html.DisplayNameFor(model => model.Tax):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Tax) @* ii. Sales Tax *@
            </dd>
            <dt class="col-sm-4 text-right font-weight-bold">
                @Html.DisplayNameFor(model => model.OrderTotal):
            </dt>
            <dd class="col-sm-8 font-weight-bold">
                @Html.DisplayFor(model => model.OrderTotal) @* iii. Order Total *@
            </dd>
        </dl>
    </div>
</div>

<br />

<h4>Order Contents:</h4>
@if (Model.OrderDetails.Count == 0)
{
    <p>This order contains no items yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Extended Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var od in Model.OrderDetails)
            {
                <tr>
                    <td>@Html.DisplayFor(item => od.Product.Name)</td> @* Show product name *@
                    <td>@Html.DisplayFor(item => od.ProductPrice)</td> @* Show price (at time of order) *@
                    <td>@Html.DisplayFor(item => od.Quantity)</td> @* Show quantity *@
                    <td>@Html.DisplayFor(item => od.ExtendedPrice)</td> @* Show extended price *@
                </tr>
            }
        </tbody>
    </table>
}


<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderID">Edit</a> |
    <a asp-action="Index">Back to Orders List</a>
</div>