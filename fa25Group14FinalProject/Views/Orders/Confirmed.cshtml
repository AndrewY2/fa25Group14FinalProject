@model fa25Group14FinalProject.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<h1>🎉 Order #@Model.OrderID Confirmed!</h1>
<hr />

<div class="alert alert-success">
    Thank yourself for your order! Your purchase has been processed and is ready for shipping.
</div>

@if (Model.OrderDetails != null && Model.OrderDetails.Any())
{
    <div class="row mb-4">
        <div class="col-md-12">
            <h3>Order Summary</h3>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Book</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Extended Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var od in Model.OrderDetails)
                    {
                        <tr>
                            <td>@od.Book.Title</td>
                            <td>@od.Quantity</td>
                            <td>@od.Price.ToString("C")</td>
                            <td>@od.ExtendedPrice.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h3>Order Details</h3>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MM/dd/yyyy")</p>
        @if (Model.Card != null)
        {
            <p><strong>Payment Method:</strong> @Model.Card.CardType ending in ************@Model.Card.LastFour</p>
        }


        @if (Model.Coupon != null)
        {
            <p><strong>Coupon Used:</strong> @Model.Coupon.CouponCode</p>
        }

        <h4 class="mt-3">Totals</h4>
        <dl class="row mt-2">
            <dt class="col-sm-6 text-right">Subtotal:</dt>
            <dd class="col-sm-6">@Model.Subtotal.ToString("C")</dd>

            @if (Model.DiscountAmount.HasValue && Model.DiscountAmount.Value > 0)
            {
                <dt class="col-sm-6 text-right text-success">Discount:</dt>
                <dd class="col-sm-6 text-success">
                    -@Model.DiscountAmount.Value.ToString("C")
                </dd>
            }


            <dt class="col-sm-6 text-right">Shipping Fee:</dt>
            <dd class="col-sm-6">@Model.ShippingFee.ToString("C")</dd>

            <dt class="col-sm-6 text-right font-weight-bold">FINAL TOTAL:</dt>
            <dd class="col-sm-6 font-weight-bold">@Model.OrderTotal.ToString("C")</dd>
        </dl>
    </div>

    @* START: ENHANCED RECOMMENDATION SECTION *@
    <div class="col-md-6">
        <h3>🎁 Recommended for You:</h3>

        @if (ViewBag.Recommendations != null && ViewBag.Recommendations.Count > 0)
        {
            <div class="row">
                @foreach (var book in ViewBag.Recommendations)
                {
                    <div class="col-12 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <h6 class="card-subtitle mb-2 text-muted">by @book.Authors</h6>

                                <p class="card-text">
                                    Genre: @book.Genre.GenreName
                                    @if (book.Rating > 0)
                                    {
                                        <br />
                                        <strong class="text-warning">★ @book.Rating.ToString("F1")/5.0</strong>
                                    }
                                </p>

                                <a asp-controller="Books"
                                   asp-action="Details"
                                   asp-route-id="@book.BookID"
                                   class="btn btn-sm btn-info">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No new recommendations available at this time.</p>
        }
    </div>
    @* END: ENHANCED RECOMMENDATION SECTION *@

</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
</div>