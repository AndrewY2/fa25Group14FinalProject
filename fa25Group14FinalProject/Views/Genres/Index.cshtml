@model IEnumerable<fa25Group14FinalProject.Models.Genre>

@{
    ViewData["Title"] = "Genres";
}

<h1>Genres</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Genre Name</th>
            </tr>
        </thead>
        <tbody>

            @if (!Model.Any())
            {
                <tr>
                    <td class="text-center text-muted py-4">No genres found.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.GenreName)</td>
                    </tr>
                }
            }
            
        </tbody>
    </table>
</div>


    <div class="mt-3">
        <p class="text-muted small">
            <strong>@Model.Count()</strong> total genre@(Model.Count() != 1 ? "s" : "")
        </p>
    </div>

