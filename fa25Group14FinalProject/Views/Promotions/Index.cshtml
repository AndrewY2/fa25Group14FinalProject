@model IEnumerable<fa25Group14FinalProject.Models.Coupon>

@{
    ViewData["Title"] = "Promotions";
}

<h1>Promotions</h1>
<p class="text-muted">
    View, enable/disable, and create coupon codes used at checkout.
</p>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Coupon</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        There are currently no coupons in the system.
    </div>
}
else
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Code</th>
                <th>Type</th>
                <th>Percent Off</th>
                <th>Free Shipping Threshold</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CouponCode</td>
                    <td>@item.CouponType</td>
                    <td>
                        @if (item.CouponType == fa25Group14FinalProject.Models.CouponType.PercentOff
                           && item.DiscountPercent.HasValue)
                        {
                            @item.DiscountPercent.Value.ToString("0")@("%")
                        }
                        else
                        {
                            @:&mdash;
                        }
                    </td>
                    <td>
                        @if (item.CouponType == fa25Group14FinalProject.Models.CouponType.FreeShipping)
                        {
                            if (item.FreeThreshold.HasValue && item.FreeThreshold.Value > 0)
                            {
                                @item.FreeThreshold.Value.ToString("C")
                            }
                            else
                            {
                                @:All orders
                            }
                        }
                        else
                        {
                            @:&mdash;
                        }
                    </td>
                    <td>
                        @if (item.Status)
                        {
                            <span class="text-success font-weight-bold">Enabled</span>
                        }
                        else
                        {
                            <span class="text-danger font-weight-bold">Disabled</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.CouponID" class="btn btn-sm btn-info">
                            Details
                        </a>

                        <form asp-action="ToggleStatus"
                              asp-route-id="@item.CouponID"
                              method="post"
                              class="d-inline">
                            <button type="submit"
                                    class="btn btn-sm @(item.Status ? "btn-warning" : "btn-success")">
                                @(item.Status ? "Disable" : "Enable")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
