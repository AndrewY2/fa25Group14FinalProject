@model Yun_Andrew_HW5.Models.OrderDetail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>OrderDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* ADDED method="post" for explicit POST submission *@
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            @* ENSURE Anti-Forgery Token is present *@
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="OrderDetailID" />

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @* Back to item list for this order (requires OrderID) *@
    <a asp-action="Index" asp-route-orderID="@Model.Order.OrderID">Back to List</a>
</div>
