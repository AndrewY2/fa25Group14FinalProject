@model Yun_Andrew_HW5.Models.OrderDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Add Product to Order @Model.Order.OrderNumber</h1>

<h4>Order Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @* CRITICAL FIX: Changed ModelOnly to All to force display of the scalar validation error (likely Quantity). *@
            <div asp-validation-summary="All" class="text-danger"></div>

            @* Part Five, Step 3c: Add hidden element for Order ID. This is CORRECT. *@
            @Html.HiddenFor(model => model.Order.OrderID)

            @* Part Five, Step 3b: Add the drop-down for products (Correctly named SelectedProduct) *@
            <div class="form-group">
                <label class="control-label">Product</label>
                <select name="SelectedProduct" class="form-control" asp-items="@ViewBag.AllProducts">
                    <option value="">Select a Product</option>
                </select>
                @* IMPORTANT: Add a dedicated span for the selected product field if it's required (for a clean error message) *@
                <span class="text-danger">@Html.ValidationMessage("SelectedProduct")</span>
            </div>

            @* Part Five, Step 3a: Keep Quantity *@
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add to Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.Order.OrderID">Back to Order Details</a>
</div>
