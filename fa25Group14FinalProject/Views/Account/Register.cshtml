@model fa25Group14FinalProject.Models.AppUser
@* If you created an IndexViewModel for your Index.cshtml, you would use that instead *@

@{
    ViewData["Title"] = "Manage Account";
}

<h1>Manage Your Account</h1>
<hr />

@* Display success/error messages *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    <div class="col-md-6">
        <h3>View & Modify Profile Information</h3>
        <hr />

        <dl class="dl-horizontal">
            <dt>First Name:</dt>
            <dd>@Model.FirstName</dd>

            <dt>Last Name:</dt>
            <dd>@Model.LastName</dd>

            <dt>Email:</dt>
            <dd>@Model.Email (Cannot be changed)</dd>

            <dt>Phone Number:</dt>
            <dd>@Model.PhoneNumber</dd>

            <dt>Address:</dt>
            <dd>@Model.Address, @Model.City, @Model.State @Model.ZipCode</dd>
        </dl>

        @* Link to your existing Modify profile action *@
        <a asp-action="Modify" class="btn btn-warning">Modify Personal Details</a>

        @* Link to your existing ChangePassword action *@
        <a asp-action="ChangePassword" class="btn btn-danger">Change Password</a>
    </div>

    <div class="col-md-6">
        <h3>Credit Card Management (@Model.Cards.Count / 3 Max)</h3>
        <hr />

        @* Display the list of cards (based on your existing Index view logic) *@
        @if (Model.Cards.Count > 0)
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Last 4 Digits</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var card in Model.Cards)
                    {
                        <tr>
                            <td>@card.CardType</td>
                            <td>@card.CardNumber.Substring(card.CardNumber.Length - 4)</td>
                            <td>
                                @* Link to your existing RemoveCard action *@
                                <form asp-action="RemoveCard" asp-route-id="@card.CardID" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        @* Button to Add Card (link to your existing AddCard action) *@
        @if (Model.Cards.Count < 3)
        {
            <a asp-action="AddCard" class="btn btn-success">Add New Card</a>
        }
    </div>
</div>