@model Yun_Andrew_HW5.Models.Supplier

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>

<br />
<h4>Products Provided:</h4>
<table class="table table-sm table-bordered">
    <tr>
        <th>Product Name</th>
        <th>Product Price</th>
    </tr>
    @if (Model.Products.Count == 0)
    {
        <tr>
            <td colspan="2">No products are currently associated with this supplier.</td>
        </tr>
    }
    else
    {
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@Html.DisplayFor(item => product.Name)</td>
                <td>@Html.DisplayFor(item => product.Price)</td>
            </tr>
        }
    }
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SupplierID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>