@model IEnumerable<fa25Group14FinalProject.Models.Reorder>

@{
    ViewData["Title"] = "Books on Order";
}

<h1>Books on Order</h1>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        There are currently no books on order.
    </div>

    <p>
        <a asp-action="Index" class="btn btn-secondary">Back to Procurement</a>
    </p>
}
else
{
    <p class="text-muted">
        These are all supplier orders that have not yet been fully received.
        Enter the number of copies that arrived for each shipment you are checking in.
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Order #</th>
                <th>Book</th>
                <th>Authors</th>
                <th class="text-center">Ordered</th>
                <th class="text-center">Received</th>
                <th class="text-center">Remaining</th>
                <th class="text-end">Cost / Copy</th>
                <th>Order Date</th>
                <th>Status</th>
                <th class="text-center">Check In</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var remaining = item.Quantity - item.QuantityReceived;
                <tr>
                    <td>@item.ReorderID</td>
                    <td>@item.Book?.Title</td>
                    <td>@item.Book?.Authors</td>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-center">@item.QuantityReceived</td>
                    <td class="text-center">@remaining</td>
                    <td class="text-end">@item.Cost.ToString("C")</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@Html.DisplayFor(m => item.ReorderStatus)</td>
                    <td class="text-center" style="min-width: 180px;">
                        @if (remaining > 0)
                        {
                            <form asp-action="BookArrival" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="ReorderID" value="@item.ReorderID" />
                                <div class="input-group input-group-sm">
                                    <input type="number"
                                           name="CopiesArrived"
                                           class="form-control text-center"
                                           min="1"
                                           value="@remaining" />
                                    <button type="submit" class="btn btn-success">
                                        Check In
                                    </button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted small">Awaiting status update</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Index" class="btn btn-secondary">Back to Procurement</a>
    </p>
}
