@model List<fa25Group14FinalProject.Models.Reorder>

@{
    ViewData["Title"] = "Review Automatic Orders";
}

<div class="row mt-3">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-secondary mb-3">
            <i class="fas fa-arrow-left"></i> Back to Procurement Dashboard
        </a>
    </div>
</div>

<h1>Review Automatic Orders</h1>
<hr />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No books currently require automatic reorder.
    </div>

    <p>

    </p>
}
else
{
    <p class="text-muted">
        Review the suggested quantities and costs for each book.
        The default quantity is 5 (citation removed for Razor compatibility).
        Set quantity to <strong>0</strong> to skip ordering that title.
    </p>

    <form asp-action="PlaceAutomaticOrders" method="post">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Authors</th>
                    <th class="text-center">Current Inventory</th>
                    <th class="text-center">Reorder Point</th>
                    <th class="text-end">Cost / Copy</th>
                    <th class="text-center">Quantity to Order</th>
                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <input type="hidden" asp-for="@(Model[i].BookID)" />

                        <td>@Model[i].Book?.Title</td>
                        <td>@Model[i].Book?.Authors</td>
                        <td class="text-center">@Model[i].Book?.InventoryQuantity</td>
                        <td class="text-center">@Model[i].Book?.ReorderPoint</td>

                        <td class="text-end" style="max-width: 120px;">
                            <input asp-for="@(Model[i].Cost)"
                                   class="form-control form-control-sm text-end"
                                   min="0.01" />
                            <span asp-validation-for="@(Model[i].Cost)" class="text-danger"></span>
                        </td>

                        <td class="text-center" style="max-width: 120px;">
                            <input asp-for="@(Model[i].Quantity)"
                                   class="form-control form-control-sm text-center"
                                   min="0" />
                            <span asp-validation-for="@(Model[i].Quantity)" class="text-danger"></span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">
                Place Automatic Orders
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                Cancel
            </a>
        </div>
    </form>
}
