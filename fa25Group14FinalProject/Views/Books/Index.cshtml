@model IEnumerable<fa25Group14FinalProject.Models.Book>
@using fa25Group14FinalProject.Models

@{
    ViewData["Title"] = "Book Search Results";
}

<h1>Bevo's Books Catalog</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary btn-sm">Add New Book</a>
    </p>
}

<div class="alert alert-info">
    Showing @ViewBag.SelectedBooks out of @ViewBag.AllBooks books
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title:</th>
            <th>Author:</th>
            <th>Unique Number:</th>
            <th>In Stock:</th>
            <th>Rating:</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Admin Actions</th>
            }
            else
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var approvedReviews = item.Reviews?
                .Where(r => r.IsApproved == true)
                .ToList() ?? new List<Review>();

            double rating = approvedReviews.Any()
                ? approvedReviews.Average(r => r.Rating)
                : 0.0;

            <tr>
                <td>@item.Title</td>
                <td>@item.Authors</td>
                <td>@item.BookNumber</td>
                <td>@(item.InventoryQuantity > 0 ? "Yes" : "No")</td>
                <td>@rating.ToString("0.00")</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.BookID">Edit</a> <span>|</span>
                        <a asp-action="Details" asp-route-id="@item.BookID">Details</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.BookID">View Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
