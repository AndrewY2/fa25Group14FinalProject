@model fa25Group14FinalProject.Models.Book
@{
    ViewData["Title"] = "Create Book";
}

<h1>Create New Book</h1>

<h4>Book Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* 1. Title (Replaces Name) *@
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            @* 2. Authors (NEW FIELD) *@
            <div class="form-group">
                <label asp-for="Authors" class="control-label"></label>
                <input asp-for="Authors" class="form-control" />
                <span asp-validation-for="Authors" class="text-danger"></span>
            </div>

            @* 3. Unique Number (NEW FIELD - Admin should be prompted) *@
            @* Note: If unique number is auto-generated, remove this field and let controller handle it. *@
            <div class="form-group">
                <label asp-for="BookNumber" class="control-label"></label>
                <input asp-for="BookNumber" class="form-control" readonly />
                <span asp-validation-for="BookNumber" class="text-danger"></span>
            </div>

            @* 4. Description *@
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @* 5. Price (Selling Price) *@
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            @* 6. Cost (Weighted Average Cost) - NEW FIELD *@
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            @* 7. Publication Date (NEW FIELD) *@
            <div class="form-group">
                <label asp-for="PublishDate" class="control-label"></label>
                <input asp-for="PublishDate" class="form-control" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>

            @* 8. Genre Selection (Replaces ProductType) *@
            <div class="form-group">
                <label asp-for="GenreID" class="control-label">Genre</label>
                <select asp-for="GenreID" class="form-control" asp-items="@ViewBag.AllGenres">
                    <option value="">Select a Genre</option>
                </select>
                <span asp-validation-for="GenreID" class="text-danger"></span>
            </div>

            @* 9. Inventory Quantity (NEW FIELD) *@
            <div class="form-group">
                <label asp-for="InventoryQuantity" class="control-label"></label>
                <input asp-for="InventoryQuantity" class="form-control" />
                <span asp-validation-for="InventoryQuantity" class="text-danger"></span>
            </div>

            @* 10. Reorder Point (NEW FIELD) *@
            <div class="form-group">
                <label asp-for="ReorderPoint" class="control-label"></label>
                <input asp-for="ReorderPoint" class="form-control" />
                <span asp-validation-for="ReorderPoint" class="text-danger"></span>
            </div>

            @* 11. Book Status (Discontinued) - NEW FIELD *@
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BookStatus" /> @Html.DisplayNameFor(model => model.BookStatus)
                </label>
            </div>

            @* REMOVED: Suppliers dropdown - Obsolete M:M relationship *@

            <div class="form-group">
                <input type="submit" value="Create Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@* The @section Scripts { ... } block is intentionally omitted to avoid the previous error. *@