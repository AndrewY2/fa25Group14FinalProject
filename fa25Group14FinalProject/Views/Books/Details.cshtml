@model fa25Group14FinalProject.Models.Book
@using Microsoft.AspNetCore.Identity
@using System.Linq

@inject UserManager<fa25Group14FinalProject.Models.AppUser> UserManager

@{
    ViewData["Title"] = "Book Details";

    bool isCustomer = User.IsInRole("Customer");

    // Build a list of approved reviews from the model (defensive for null)
    var approvedReviews = Model.Reviews != null
        ? Model.Reviews
            .Where(r => r.IsApproved == true)
            .OrderByDescending(r => r.ReviewDate)
            .ToList()
        : new List<fa25Group14FinalProject.Models.Review>();

    double? avgRating = approvedReviews.Any()
        ? approvedReviews.Average(r => r.Rating)
        : (double?)null;

    int approvedCount = approvedReviews.Count;
}

<h1>@Model.Title</h1>

@* Show TempData messages from review attempts *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div>
    <h4>Book Information</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Authors)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Authors)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BookNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BookNumber)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Genre.GenreName)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PublishDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PublishDate)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.InventoryQuantity)
        </dt>
        <dd class="col-sm-9">
            @(Model.InventoryQuantity > 0 ? Model.InventoryQuantity.ToString() : "Out of Stock")
        </dd>

        @* Admin-only: Cost & Reorder Point *@
        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-3 text-success">
                @Html.DisplayNameFor(model => model.Cost)
            </dt>
            <dd class="col-sm-9 text-success">
                @Html.DisplayFor(model => model.Cost)
            </dd>

            <dt class="col-sm-3 text-info">
                @Html.DisplayNameFor(model => model.ReorderPoint)
            </dt>
            <dd class="col-sm-9 text-info">
                @Html.DisplayFor(model => model.ReorderPoint)
            </dd>
        }
    </dl>
</div>

<hr />

@* =======================
     REVIEWS & RATING
    ======================= *@
<div>
    <h4>Reviews & Rating</h4>
    <dl class="row">
        <dt class="col-sm-3">
            Average Rating:
        </dt>
        <dd class="col-sm-9">
            @if (avgRating.HasValue && approvedCount > 0)
            {
                <span>
                    <strong>@avgRating.Value.ToString("0.0")</strong> / 5.0 -
                    @approvedCount @(" approved reviews")
                </span>
            }
            else
            {
                <span>
                    <strong>N/A</strong> / 5.0 -
                    @("0 approved reviews")
                </span>
            }
        </dd>
    </dl>

    @* Customer “Write a Review” button *@
    @if (isCustomer)
    {
        <a asp-controller="Reviews"
           asp-action="Create"
           asp-route-bookID="@Model.BookID"
           class="btn btn-sm btn-outline-info mb-3">
            Write a Review
        </a>
    }

    @* List only APPROVED reviews *@
    @if (approvedReviews.Any())
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10%;">Rating</th>
                    <th>Review Text</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in approvedReviews)
                {
                    <tr>
                        <td>@($"{review.Rating} / 5")</td>
                        <td>@review.ReviewText</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No approved reviews available yet.</p>
    }
</div>

<hr />

@* =======================
     CUSTOMER: ADD TO CART
    ======================= *@
@if (isCustomer)
{
    if (Model.BookStatus == true)
    {
        <div class="alert alert-danger">
            This book has <strong>been discontinued</strong> and cannot be purchased.
        </div>
    }
    else if (Model.InventoryQuantity > 0)
    {
        <form asp-controller="OrderDetails" asp-action="AddItem" method="post" class="form-inline">
            <input type="hidden" name="BookID" value="@Model.BookID" />
            <div class="form-group mr-2">
                <label for="Quantity" class="mr-2">Quantity:</label>
                <input type="number"
                       name="Quantity"
                       value="1"
                       min="1"
                       max="@Model.InventoryQuantity"
                       class="form-control"
                       style="width: 80px;"
                       required />
            </div>
            <button type="submit" class="btn btn-success">Add to Cart</button>
        </form>
    }
    else
    {
        <div class="alert alert-warning">
            <strong>Out of Stock</strong> – Cannot be added to cart.
        </div>
    }
}

<hr />

<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.BookID">Edit Book Details</a> <span>|</span>
    }
    <a asp-action="Index">Back to List</a>
</div>
