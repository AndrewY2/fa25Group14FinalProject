@model IEnumerable<dynamic>
@using System.Linq

@{
    ViewData["Title"] = "Report C - All Customers";
    // Read current sort options from query string for dropdown state
    string sortBy = (Context.Request.Query["SortField"].FirstOrDefault() ?? "ProfitMargin").ToLower();
    string sortDir = (Context.Request.Query["SortDirection"].FirstOrDefault() ?? "Descending").ToLower();

    // Use Model directly - no re-sorting in view (controller handles it)
    var rows = Model;
}

<div class="row mt-3">
    <div class="col-md-12">
        <a asp-controller="Reports" asp-action="Index" class="btn btn-secondary mb-3">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<h2 class="mb-3">All Customers</h2>

<p>
    This report is grouped by customer, showing the lifetime total revenue and profit generated from each individual.
</p>

<p><strong>Record count:</strong> @ViewBag.RecordCount</p>

<form asp-controller="Reports"
      asp-action="GenerateReport"
      method="get"
      class="form-inline mb-3">

    <input type="hidden" name="reportType" value="C" />
    <input type="hidden" name="StartDate" value="@Context.Request.Query["StartDate"]" />
    <input type="hidden" name="EndDate" value="@Context.Request.Query["EndDate"]" />
    <input type="hidden" name="CustomerFilter" value="@Context.Request.Query["CustomerFilter"]" />
    <input type="hidden" name="BookFilter" value="@Context.Request.Query["BookFilter"]" />

    <div class="form-group mr-2">
        <label for="SortField" class="mr-1">Sort by:</label>
        <select id="SortField" name="SortField" class="form-control">
            <option value="ProfitMargin" selected="@(sortBy.Contains("profit"))">Profit Margin</option>
            <option value="TotalRevenue" selected="@(sortBy.Contains("revenue"))">$ Amount of Revenue</option>
        </select>
    </div>

    <div class="form-group mr-2">
        <label for="SortDirection" class="mr-1">Direction:</label>
        <select id="SortDirection" name="SortDirection" class="form-control">
            <option value="Descending" selected="@(sortDir == "descending")">Descending</option>
            <option value="Ascending" selected="@(sortDir == "ascending")">Ascending</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Apply</button>
</form>

@if (ViewBag.RecordCount > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Total Revenue</th>
                <th>Total Profit Margin</th>
                <th>Total Profit Margin (%)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in rows)
            {
                string customerName = (string)row.CustomerName;
                decimal totalRevenue = (decimal)row.TotalRevenue;
                decimal totalProfit = (decimal)row.TotalProfit;
                decimal profitMarginRatio = (decimal)row.ProfitMargin; // From controller: TotalProfit / TotalRevenue

                // Convert ratio to percentage for display (controller provides ratio 0.0-1.0)
                decimal marginPercent = profitMarginRatio * 100m;

                <tr>
                    <td>@customerName</td>
                    <td>@totalRevenue.ToString("C")</td>
                    <td>@totalProfit.ToString("C")</td>
                    <td>@marginPercent.ToString("0.##")%</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        <strong>No records found.</strong> The current sales filters did not match any customer sales data. Please adjust your criteria and try again.
    </div>
}
