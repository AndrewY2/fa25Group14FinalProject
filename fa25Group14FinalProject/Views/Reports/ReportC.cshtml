@model IEnumerable<dynamic>
@using System.Linq

@{
    ViewData["Title"] = "Report C - All Customers";
    // Read current sort options from query string
    string sortBy = (Context.Request.Query["sortBy"].FirstOrDefault() ?? "margin").ToLower();
    string sortDir = (Context.Request.Query["sortDir"].FirstOrDefault() ?? "desc").ToLower();

    // Start from the controller's data
    IEnumerable<dynamic> rowsEnum = Model;
    // Choose sort key
    Func<dynamic, object> keySelector;
    switch (sortBy)
    {
        case "revenue":
            keySelector = r => (decimal)r.TotalRevenue;
            break;
        case "margin": // Default sort for Report C is Profit Margin (TotalProfit)
        default:
            keySelector = r => (decimal)r.TotalProfit;
            break;
    }

    // Apply ascending/descending
    if (sortDir == "asc")
    {
        rowsEnum = rowsEnum.OrderBy(keySelector);
    }
    else
    {
        rowsEnum = rowsEnum.OrderByDescending(keySelector);
    }

    var rows = rowsEnum.ToList();
}

<div class="row mt-3">
    <div class="col-md-12">
        <a asp-controller="Reports" asp-action="Index" class="btn btn-secondary mb-3">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<h2 class="mb-3">All Customers</h2>

<p>
    This report is grouped by customer, showing the lifetime total revenue and profit generated from each individual.
</p>

<p><strong>Record count:</strong> @ViewBag.RecordCount</p>

<form asp-controller="Reports"
      asp-action="GenerateReport"
      method="get"
      class="form-inline mb-3">

    <input type="hidden" name="reportType" value="C" />

    <input type="hidden" name="StartDate" value="@Context.Request.Query["StartDate"]" />
    <input type="hidden" name="EndDate" value="@Context.Request.Query["EndDate"]" />
    <input type="hidden" name="CustomerFilter" value="@Context.Request.Query["CustomerFilter"]" />
    <input type="hidden" name="BookFilter" value="@Context.Request.Query["BookFilter"]" />

    <div class="form-group mr-2">
        <label for="sortBy" class="mr-1">Sort by:</label>
        <select id="sortBy" name="sortBy" class="form-control">
            @if (sortBy == "margin")
            {
                <option value="margin" selected>Profit Margin</option>
            }
            else
            {
                <option value="margin">Profit Margin</option>
            }

            @if (sortBy == "revenue")
            {
                <option value="revenue" selected>$ Amount of Revenue</option>
            }
            else
            {
                <option value="revenue">$ Amount of Revenue</option>
            }
        </select>
    </div>

    <div class="form-group mr-2">
        <label for="sortDir" class="mr-1">Direction:</label>
        <select id="sortDir" name="sortDir" class="form-control">
            @if (sortDir == "desc")
            {
                <option value="desc" selected>Descending</option>
            }
            else
            {
                <option value="desc">Descending</option>
            }

            @if (sortDir == "asc")
            {
                <option value="asc" selected>Ascending</option>
            }
            else
            {
                <option value="asc">Ascending</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Apply</button>
</form>

@if (ViewBag.RecordCount > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Total Revenue</th>
                <th>Total Profit</th>
                <th>Profit Margin \%</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in rows)
            {
                string customerName = (string)row.CustomerName;
                decimal totalRevenue = (decimal)row.TotalRevenue;
                decimal totalProfit = (decimal)row.TotalProfit;

                // Calculate Profit Margin %
                decimal marginPercent = totalRevenue == 0 ? 0 : (totalProfit / totalRevenue) * 100m;

                <tr>
                    <td>@customerName</td>
                    <td>@totalRevenue.ToString("C")</td>
                    <td>@totalProfit.ToString("C")</td>
                    <td>@marginPercent.ToString("0.##")\%</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        <strong>No records found.</strong> The current sales filters did not match any customer sales data. Please adjust your criteria and try again.
    </div>
}