@model IEnumerable<dynamic>
@using System.Linq

@{
    ViewData["Title"] = "Report B - All Orders";
    // Read current sort options from query string
    string sortBy = (Context.Request.Query["sortBy"].FirstOrDefault() ?? "recent").ToLower();
    string sortDir = (Context.Request.Query["sortDir"].FirstOrDefault() ?? "desc").ToLower();

    // Start from the controller's data
    IEnumerable<dynamic> rowsEnum = Model;
    // Choose sort key
    Func<dynamic, object> keySelector = r => (DateTime)r.OrderDate;
    switch (sortBy)
    {
        case "margin":
            keySelector = r => (decimal)r.ProfitMargin;
            // total profit
            break;
        case "price":
            keySelector = r => (decimal)r.OrderPrice; // Corrected from Subtotal to OrderPrice (as used in the loop below)
                                                      // total revenue
            break;
        default: // "recent"
            keySelector = r => (DateTime)r.OrderDate;
            break;
    }

    // Apply ascending/descending
    if (sortDir == "asc")
    {
        rowsEnum = rowsEnum.OrderBy(keySelector);
    }
    else
    {
        rowsEnum = rowsEnum.OrderByDescending(keySelector);
    }

    var rows = rowsEnum.ToList();
}

<div class="row mt-3">
    <div class="col-md-12">
        <a asp-controller="Reports" asp-action="Index" class="btn btn-secondary mb-3">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<h2 class="mb-3">All Orders</h2>

<p><strong>Record count:</strong> @ViewBag.RecordCount</p>

<form asp-controller="Reports"
      asp-action="GenerateReport"
      method="get"
      class="form-inline mb-3">

    <input type="hidden" name="reportType" value="B" />

    <input type="hidden" name="StartDate" value="@Context.Request.Query["StartDate"]" />
    <input type="hidden" name="EndDate" value="@Context.Request.Query["EndDate"]" />
    <input type="hidden" name="CustomerFilter" value="@Context.Request.Query["CustomerFilter"]" />
    <input type="hidden" name="BookFilter" value="@Context.Request.Query["BookFilter"]" />

    <div class="form-group mr-2">
        <label for="sortBy" class="mr-1">Sort by:</label>
        <select id="sortBy" name="sortBy" class="form-control">
            @if (sortBy == "recent")
            {
                <option value="recent" selected>Most Recent</option>
            }
            else
            {
                <option value="recent">Most Recent</option>
            }

            @if (sortBy == "margin")
            {
                <option value="margin" selected>Profit Margin</option>
            }
            else
            {
                <option value="margin">Profit Margin</option>
            }

            @if (sortBy == "price")
            {
                <option value="price" selected>Price</option>
            }
            else
            {
                <option value="price">Price</option>
            }
        </select>
    </div>

    <div class="form-group mr-2">
        <label for="sortDir" class="mr-1">Direction:</label>
        <select id="sortDir" name="sortDir" class="form-control">
            @if (sortDir == "desc")
            {
                <option value="desc" selected>Descending</option>
            }
            else
            {
                <option value="desc">Descending</option>
            }

            @if (sortDir == "asc")
            {
                <option value="asc" selected>Ascending</option>
            }
            else
            {
                <option value="asc">Ascending</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Apply</button>
</form>

@if (ViewBag.RecordCount > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Order Date</th>
                <th>Customer</th>
                <th>Total Revenue</th>
                <th>Total Cost</th>
                <th>Total Profit</th>
                <th>Profit Margin \%</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in rows)
            {
                int orderId = (int)row.OrderID;
                DateTime orderDate = (DateTime)row.OrderDate;
                string customerName = (string)row.CustomerName;

                decimal subtotal = (decimal)row.OrderPrice;
                decimal totalCost = (decimal)row.TotalCost;
                decimal totalProfit = (decimal)row.ProfitMargin;
                decimal marginPercent = subtotal == 0 ? 0 : (totalProfit / subtotal) * 100m;
                <tr>
                    <td>@orderId</td>
                    <td>@orderDate.ToShortDateString()</td>
                    <td>@customerName</td>

                    <td>@subtotal.ToString("C")</td>
                    <td>@totalCost.ToString("C")</td>
                    <td>@totalProfit.ToString("C")</td>
                    <td>@marginPercent.ToString("0.##")\%</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        <strong>No records found.</strong> The current filters for Date Range, Customer, or Book/Genre did not match any orders. Please adjust your criteria and try again.
    </div>
}