@{
    ViewData["Title"] = "Reports Dashboard";
}

<h2 class="mb-4">Reports Dashboard</h2>

<p>Select a report below to generate results. Only Admins may access reports.</p>

<div class="row">

    <!-- REPORT A -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Report A</h5>
                <p class="card-text">
                    All books sold — includes book title, quantity, order number, customer,
                    selling price, weighted average cost, and per-book profit margin.
                </p>
                <a asp-controller="Reports"
                   asp-action="GenerateReport"
                   asp-route-reportType="A"
                   class="btn btn-primary btn-sm">
                    View Report A
                </a>
            </div>
        </div>
    </div>

    <!-- REPORT B -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Report B</h5>
                <p class="card-text">
                    All orders — grouped by order. Shows revenue, total cost, and profit
                    for each entire order.
                </p>
                <a asp-controller="Reports"
                   asp-action="GenerateReport"
                   asp-route-reportType="B"
                   class="btn btn-primary btn-sm">
                    View Report B
                </a>
            </div>
        </div>
    </div>

    <!-- REPORT C -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Report C</h5>
                <p class="card-text">
                    All customers — grouped by customer. Shows total revenue and profit
                    generated by each customer.
                </p>
                <a asp-controller="Reports"
                   asp-action="GenerateReport"
                   asp-route-reportType="C"
                   class="btn btn-primary btn-sm">
                    View Report C
                </a>
            </div>
        </div>
    </div>

</div>

<div class="row">

    <!-- REPORT D -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Report D</h5>
                <p class="card-text">
                    Total revenue, total cost, and total profit — aggregated across all orders.
                </p>
                <a asp-controller="Reports"
                   asp-action="GenerateReport"
                   asp-route-reportType="D"
                   class="btn btn-primary btn-sm">
                    View Report D
                </a>
            </div>
        </div>
    </div>

    <!-- REPORT E -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Report E</h5>
                <p class="card-text">
                    Current inventory — shows each book, inventory quantity, weighted
                    average cost, and total inventory value at bottom.
                </p>
                <a asp-controller="Reports"
                   asp-action="GenerateReport"
                   asp-route-reportType="E"
                   class="btn btn-primary btn-sm">
                    View Report E
                </a>
            </div>
        </div>
    </div>

    <!-- REPORT F -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Report F</h5>
                <p class="card-text">
                    Approved / rejected reviews — grouped by employee, showing how many
                    reviews each employee approved or rejected.
                </p>
                <a asp-controller="Reports"
                   asp-action="GenerateReport"
                   asp-route-reportType="F"
                   class="btn btn-primary btn-sm">
                    View Report F
                </a>
            </div>
        </div>
    </div>

</div>
