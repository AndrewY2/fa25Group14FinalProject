@model IEnumerable<fa25Group14FinalProject.Models.Review>

@{
    ViewData["Title"] = "Manage Reviews";
}

<h2>Manage Reviews</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (!Model.Any())
{
    <p>No pending reviews to approve.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book</th>
                <th>Customer</th>
                <th>Rating</th>
                <th>Review Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.Book.Title</td>
                    <td>
                        @review.Reviewer?.FirstName @review.Reviewer?.LastName
                        <br />
                        <small>@review.Reviewer?.Email</small>
                    </td>
                    <td>@review.Rating</td>
                    <td>@review.ReviewText</td>
                    <td>
                        <form asp-action="ApproveReview" asp-controller="Employees" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@review.ReviewID" />
                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        </form>

                        <form asp-action="RejectReview" asp-controller="Employees" method="post" class="d-inline ml-1">
                            <input type="hidden" name="id" value="@review.ReviewID" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to reject this review?');">
                                Reject
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
