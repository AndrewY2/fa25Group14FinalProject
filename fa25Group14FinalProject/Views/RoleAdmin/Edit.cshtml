@model RoleEditModel
@{
    ViewBag.Title = "Edit Role";
}

<h2>Edit Role: @Model.Role.Name</h2>

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @* PRIMARY FIX 1: Ensure RoleName is sent (already done) *@
    <input type="hidden" name="RoleName" value="@Model.Role.Name" />

    @* PRIMARY FIX 2: Dummy input to ensure IdsToAdd is posted even if no boxes are checked *@
    <input type="hidden" name="IdsToAdd" value="" />

    <div class="panel panel-primary">
        <div class="panel-heading">Add To @Model.Role.Name</div>
        <table class="table table-striped">
            @if (Model.RoleNonMembers.Count() == 0)
            {
                <tr>
                    <td colspan="3">All Users Are Members</td>
                </tr>
            }
            else
            {
                <tr>
                    <th>First Name</th>
                    <th>Email</th>
                    <th>Add to Role</th>
                </tr>
                foreach (AppUser user in Model.RoleNonMembers)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.UserName</td>
                        @*<td>@user.LastName</td>*@
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    @* PRIMARY FIX 3: Dummy input to ensure IdsToDelete is posted even if no boxes are checked *@
    <input type="hidden" name="IdsToDelete" value="" />

    <div class="panel panel-primary">
        <div class="panel-heading">Remove from @Model.Role.Name</div>
        <table class="table table-striped">
            @* MINOR FIX: Ensures correct message when no members exist *@
            @if (Model.RoleMembers.Count() == 0)
            {
                <tr>
                    <td colspan="3">No Users Are Members</td>
                </tr>
            }
            else
            {
                <tr>
                    <th>First Name</th>
                    @* <th>Last Name</th>*@
                    <th>Email</th>
                    <th>Remove From Role</th>
                </tr>
                foreach (AppUser user in Model.RoleMembers)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        @*<td>@user.LastName</td>*@
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <button type="submit" class="btn btn-danger">Save</button>
    <a asp-action="Index" class="btn btn-success">Cancel</a>
}